<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.happynev.mwoscoreboardhelper.SqlTabController">
   <children>
      <TextArea fx:id="textSql" promptText="Sql Query" VBox.vgrow="SOMETIMES" />
      <HBox VBox.vgrow="NEVER">
         <children>
            <Label fx:id="labelStatus" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <RadioButton fx:id="radioQuery" mnemonicParsing="false" text="Query">
               <toggleGroup>
                  <ToggleGroup fx:id="sqlType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioUpdate" mnemonicParsing="false" text="Update/Insert" toggleGroup="$sqlType" />
            <Button fx:id="buttonExecuteQuery" mnemonicParsing="false" text="Execute SQL" />
         </children>
      </HBox>
      <VBox fx:id="paneResult" VBox.vgrow="SOMETIMES" />
   </children>
</VBox>
